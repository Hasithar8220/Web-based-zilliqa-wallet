    <div class="container">

       
 <br>

<table>
    <tr>
        <th>TxId</th>
        <th>Type</th>
        <th>From</th>
        <th>To</th>
      </tr>
    <% if(data !== null){
      for (var i = 0; i < data.length; i++) { %>
        <tr>
          
    <td >
       
            <%= data[i].hash %>  
           
      
      </td>

      <td >
       
          <%  if(address == data[i].from){ %>
         Sent

         <% } %>
    
    </td>

      <td >
       
          <%= data[i].from %>  
         
    
    </td>
    <td >
       
        <%= data[i].to %>  
       
  
  </td>  </tr>
    <% }} %>
  </table>

 

    </div>
  </body>
